{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "lib": [
            "es6",
            "es7"
        ],
        "outDir": "./lib",
        "strictNullChecks": true,
        "typeRoots": ["./node_modules/@types"],
        "noUnusedLocals": true,
        "noUnusedParameters": true
    },
    "include": [
        "src/**/*"
    ]
}
